cflags = -std=c99
cppflags = -std=c++11
mflags = `gnustep-config --objc-flags`
mmflags = -fobjc-exceptions -fobjc-call-cxx-cdtors -D __STDC_LIMIT_MACROS

rule c
    depfile = $out.d
    command = gcc -MMD -MF $out.d $flags $cflags -c $in -o $out

rule cpp
    depfile = $out.d
    command = g++ -MMD -MF $out.d $flags $cppflags -c $in -o $out

rule m
    depfile = $out.d
    command = gcc -MMD -MF $out.d $flags $cflags $mflags -c $in -o $out

rule mm
    depfile = $out.d
    command = gcc -MMD -MF $out.d $flags $cppflags $mflags $mmflags -c $in -o $out

ldflags = -lgnustep-base -lobjc -lpanel -lcurses -lstdc++

rule link
    command = g++ $in $ldflags $ldflags2 -o $out
